<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="mohsin.reza.whatsaround.vo.FoursquareItems"/>
        <import type="java.util.List"/>
        <variable name="searchResource" type="mohsin.reza.whatsaround.vo.Resource"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/cardview_shadow_start_color">


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" tools:listitem="@layout/venue_item"
            android:id="@+id/venue_list"/>

    </LinearLayout>

</layout>